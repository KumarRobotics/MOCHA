<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.rajant.bcapi-help</groupId>
    <artifactId>bcapi-watchstate</artifactId>
    <version>11.19.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>watchstate</name>

    <repositories>
        <repository>
            <id>bcapi-help</id>
            <name>lib</name>
            <url>file://${project.basedir}/../lib</url>
        </repository>
        <repository>
            <id>martiansoftware</id>
            <url>http://mvn.martiansoftware.com</url>
        </repository>
    </repositories>

    <properties>
        <logback.version>1.1.7</logback.version>
        <google.protobuf.version>2.6.1</google.protobuf.version>
        <slf4j.version>1.7.21</slf4j.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.rajant.lib</groupId>
            <artifactId>bcapi-lite</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.rajant</groupId>
            <artifactId>bcapi-protobufs</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>${logback.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-core</artifactId>
            <version>${logback.version}</version>
        </dependency>
        <dependency>
            <groupId>com.google.protobuf</groupId>
            <artifactId>protobuf-java</artifactId>
            <version>${google.protobuf.version}</version>
        </dependency>
    </dependencies>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>1.6.0</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>java</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <mainClass>com.rajant.bcapi.watchstate.WatchStateApp</mainClass>
                        <commandlineArgs>$*</commandlineArgs>
                    </configuration>
                </plugin>
                <plugin>
                  <artifactId>maven-assembly-plugin</artifactId>
                  <configuration>
                    <archive>
                      <manifest>
                        <mainClass>com.rajant.bcapi.watchstate.WatchStateApp</mainClass>
                      </manifest>
                    </archive>
                    <descriptorRefs>
                      <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                  </configuration>
                </plugin>
            </plugins>

        </pluginManagement>
    </build>
</project>
