<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.rajant.app</groupId>
        <artifactId>examples</artifactId>
        <version>11.19.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <groupId>com.rajant.app</groupId>
    <artifactId>java-examples</artifactId>
    <packaging>pom</packaging>
    <name>java-examples</name>

    <properties>
        <logback.version>1.1.7</logback.version>
        <google.protobuf.version>2.5.0</google.protobuf.version>
        <slf4j.version>1.7.21</slf4j.version>
        <maven.version>3.1.0</maven.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.apache.maven.wagon</groupId>
            <artifactId>wagon</artifactId>
            <version>${maven.version}</version>
            <type>pom</type>
        </dependency>
    </dependencies>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>${maven.version}</version>
            </extension>
        </extensions>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.1.1</version>
                <inherited>false</inherited>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.apache.maven.wagon</groupId>
                                    <artifactId>wagon</artifactId>
                                    <version>${maven.version}</version>
                                    <type>pom</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/org/apache/maven/wagon/wagon/${maven.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>ch.qos.logback</groupId>
                                    <artifactId>logback-classic</artifactId>
                                    <version>${logback.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/ch/qos/logback/logback-classic/${logback.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>ch.qos.logback</groupId>
                                    <artifactId>logback-core</artifactId>
                                    <version>${logback.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/ch/qos/logback/logback-core/${logback.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.google.protobuf</groupId>
                                    <artifactId>protobuf-java</artifactId>
                                    <version>${google.protobuf.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/com/google/protobuf/protobuf-java/${google.protobuf.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.google.protobuf</groupId>
                                    <artifactId>protobuf-java</artifactId>
                                    <version>${google.protobuf.version}</version>
                                    <type>pom</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/com/google/protobuf/protobuf-java/${google.protobuf.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.rajant</groupId>
                                    <artifactId>bcapi-protobufs</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/com/rajant/bcapi-protobufs/${project.version}</outputDirectory>
                                    <destFileName>bcapi-protobufs-${project.version}.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.rajant</groupId>
                                    <artifactId>bcapi-protobufs</artifactId>
                                    <version>${project.version}</version>
                                    <type>pom</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/com/rajant/bcapi-protobufs/${project.version}</outputDirectory>
                                    <destFileName>bcapi-protobufs-${project.version}.pom</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.rajant</groupId>
                                    <artifactId>jv11</artifactId>
                                    <version>${project.version}</version>
                                    <type>pom</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/com/rajant/jv11/${project.version}</outputDirectory>
                                    <destFileName>jv11-${project.version}.pom</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.rajant</groupId>
                                    <artifactId>jv11-lib</artifactId>
                                    <version>${project.version}</version>
                                    <type>pom</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/com/rajant/jv11-lib/${project.version}</outputDirectory>
                                    <destFileName>jv11-lib-${project.version}.pom</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.rajant.lib</groupId>
                                    <artifactId>bcapi-lite</artifactId>
                                    <version>${project.version}</version>
                                    <type>pom</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/com/rajant/lib/bcapi-lite/${project.version}</outputDirectory>
                                    <destFileName>bcapi-lite-${project.version}.pom</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.rajant.lib</groupId>
                                    <artifactId>bcapi-lite</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/com/rajant/lib/bcapi-lite/${project.version}</outputDirectory>
                                    <destFileName>bcapi-lite-${project.version}.jar</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.slf4j</groupId>
                                    <artifactId>jcl-over-slf4j</artifactId>
                                    <version>${slf4j.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/org/slf4j/jcl-over-slf4j/${slf4j.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.slf4j</groupId>
                                    <artifactId>slf4j-api</artifactId>
                                    <version>${slf4j.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/org/slf4j/slf4j-api/${slf4j.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.slf4j</groupId>
                                    <artifactId>slf4j-jdk14</artifactId>
                                    <version>1.7.21</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.basedir}/lib/org/slf4j/slf4j-jdk14/${slf4j.version}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
